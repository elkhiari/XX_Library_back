<%- include("include/_header") %>

<!-- Start Main -->
<main>
  <div class="container">
    <div class="mainTitle">
      <a href="/">All Users</a>
      <h3>edit User info</h3>
      <p>Use below form to edit the account</p>
    </div>
    <form method="post">
      <div class="form-group">
        <label for="fname" class="form-label mt-4">Name</label>
        <input
          type="text"
          class="form-control"
          id="fname"
          placeholder="joe snow"
          name="fname"
        />
        <input type="text" name="id" hidden />
      </div>
      <div class="form-group">
        <label for="email" class="form-label mt-4">Mail</label>
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder="example@gmail.com"
          name="mail"
        />
      </div>
      <div class="form-check">
        <label>Gender</label>
        <div>
          <label for="male">Male</label>
          <input
            class="form-check-input"
            type="radio"
            name="gender"
            id="male"
            value="1"
          />
        </div>
        <div>
          <label for="female">Female</label>
          <input
            class="form-check-input"
            type="radio"
            name="gender"
            id="female"
            value="2"
          />
        </div>
      </div>
      <div class="form-check">
        <label>Status</label>
        <div>
          <label for="active">Active</label>
          <input
            class="form-check-input"
            type="radio"
            name="status"
            id="acive"
            value="1"
          />
        </div>
        <div>
          <label for="inacive">Inacive</label>
          <input
            class="form-check-input"
            type="radio"
            name="status"
            id="inacive"
            value="2"
          />
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</main>

<!-- End Main -->

<%- include("include/_footer") %>
